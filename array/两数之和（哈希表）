def Two_sum(arr, target):
    """
    哈希表求两数之和
    :param nums: 输入列表
    :param target: 两数之和目标值
    :return: 返回满足要求的两数的索引
    """
    # 创建一个空字典
    hashtable = dict()
    # 分别对索引和值进行遍历
    for i, num in enumerate(arr):
        # 如果另一个值在哈希表中
        if target-num in hashtable:
            # 返回两数对应的索引
            return [hashtable[target-num], i]
        # 如果不在哈希表中，则将其添加到哈希表中
        hashtable[arr[i]] = i


print(Two_sum([1, 2, 4, 6], 3))
